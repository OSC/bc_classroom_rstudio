<%-
  groups = OodSupport::User.new.groups.sort_by(&:id).tap do |groups|
    groups.unshift(groups.delete(OodSupport::Process.group))
  end.map(&:name).grep(/^P./)

  classrooms = OodAppkit.clusters.each_with_object({}) do |cluster, hash|
    if cluster.kubernetes?
      hash.merge!(cluster.custom_config[:classrooms].to_h)
    end
  end.select do |k,v|
    k.start_with?('rstudio') && groups.include?(v)
  end.map do |k,v|
    [ k.gsub('rstudio/', ''), v ]
  end
-%>
---
cluster:
  - "kubernetes"
  - "kubernetes-test"
  - "kubernetes-dev"
form:
  - classroom
  - account
  - time
  - size
attributes:
  account:
    widget: "hidden_field"
  time:
    widget: "select"
    options:
      - [ "1.5 hours", "1.5"]
      - [ "3 hours", "3"]
      - [ "6 hours", "6"]
  size:
    widget: "select"
    options:
      - "small"
      - "medium"
      - "large"
      - "exra-large"
    help: |
      * **small** - less than 1 core & 2 GB of memory.
      * **medium** - 2 cores & 8 GB of memory.
      * **large** - 4 cores & 16 GB of memory.
      * **extra-large** - 8 cores & 32 GB of memory.
  <%- if classrooms.size >= 1 -%>
  classroom:  
    widget: select
    options:
      <%- classrooms.each do |key, value| %>
      - [
        "<%= key.gsub('_', ' ') %>", "<%= key %>",
        data-set-account: "<%= value %>"
        ]
      <%- end %>
  <%- end -%>
